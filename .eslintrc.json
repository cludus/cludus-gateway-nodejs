{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": [
      "./tsconfig.json"
    ]
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "ignorePatterns": [
    "test/**/*",
    "build/**/*",
    "coverage/**/*"
  ],
  "rules": {
    "@typescript-eslint/ban-ts-comment": "off"
  }
}
